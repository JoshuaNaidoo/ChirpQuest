<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333333"
    android:padding="16dp"
    tools:context=".CreateFindingsFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#BFFF00">

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <!-- Title -->
        <TextView
            android:id="@+id/findingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Findings"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Bird Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Name/Species Input -->
        <EditText
            android:id="@+id/speciesInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Name / Species"
            android:textColor="#FFFFFF"
            android:backgroundTint="#BFFF00"
            android:padding="8dp" />

        <!-- Photo Capture Button -->
        <ImageButton
            android:id="@+id/photoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_camera"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Date, Time, and Location -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DD/MM/YY"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HH:MM"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <!-- Description Input -->
    <EditText
        android:id="@+id/descriptionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description - Optional"
        android:textColor="#FFFFFF"
        android:backgroundTint="#BFFF00"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Findings"
            android:layout_weight="1"
            android:backgroundTint="#BFFF00" />

        <Button
            android:id="@+id/favoriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:layout_weight="1"
            android:backgroundTint="#999999" />

    </LinearLayout>

    <!-- Post to Flock Button -->
    <Button
        android:id="@+id/postButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post to Flock?"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BFFF00"
        android:enabled="false" />
</LinearLayout>
