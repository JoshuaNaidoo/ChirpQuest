<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" />

    <!-- Outline properties -->
    <stroke
        android:width="1dp"
        android:color="#A6FF00" />

    <!-- Padding around the text inside the box -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Set the corners if you want a square/rectangle -->
    <corners android:radius="5dp" /> <!-- 0dp for sharp corners -->
</shape>
